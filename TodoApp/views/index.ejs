<html ng-app="app.todos">
    <head>
        <title>Todo App</title>
        <!--load cdn-->
        <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.8.1/css/xeditable.min.css">
        
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.0/angular.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.8.1/js/xeditable.min.js"></script>


        <!--load app style-->
        <link rel="stylesheet" href="css/style.css">
        <!--load app-->
        <script src="js/app.js"></script>

    </head>
    <body ng-controller="todoController">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img src="images/logo.png" width="135px">
                    </a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/">Trang chủ</a></li>
                    <li><a href="/gioithieu">Giới thiệu</a></li>
                    <li><a href="/dangnhap">Đăng nhập</a></li>
                </ul>
            </div>
        </nav>
        <div class="container">
         
            <div class="jumbotron text-center">
                
                <div id="todo-form" class="row">
                    <div class="text-center">
                        <form>
                            <div class="form-group">
                                <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="Vui lòng nhập công việc?">
                            </div>
    
                            <button type="submit" class="btn btn-primary btn-lg" ng-disabled="!formData.text" ng-click="themdulieu()">Thêm</button>
                        </form>
                    </div>
                </div>

             
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Công việc</th>
                        <th>Hoàn thành</th>
                        <th>Sửa đổi</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr ng-repeat = "index in todos" ng-repeat = "temp in todos"><!-- Giong forearch -->
                        <td>{{index + 1}}</td>
                        <td>{{temp.text}}</td>
                        <td>{{temp.isDone}}</td>
                        <td><a href ng-click = "xoadulieu(temp)">Remove</a></td>
                      </tr>
                    </tbody>
                  </table>

                </div>
        </div>
        
    </body>
</html>